class DailyMetric < ActiveRecord::Base
  belongs_to :measureable
  attr_accessible :count, :time_pointer, :measureable_id

  def self.add (event)
    metric = find_or_create_by_day(:time_pointer => event.day, :measureable_id => event.measureable_id)
    metric.update_column(:count, metric.count + 1)
  end

end
